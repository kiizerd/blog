<div class="row w-50 mx-auto my-3">
  <h3 class='col'>Tags</h3>
</div>

<div class="list-group w-50 mx-auto">
  <% @tags.each do |tag| %>
    <% class_list = 'list-group-item d-flex justify-content-between align-items-center' %>
    <%= link_to tag, class: class_list do %>
      <%= tag.name %>
      <span class="badge bg-success rounded-pill"><%= tag.articles.size %></span>
    <% end %>
  <% end %>
</div>