<div class="row my-3 w-50 mx-auto">
  <div class="col">
    <h3><%= @tag.name.titleize %></h3>
  </div>

  <div class="col">
    <%= link_to tag_path(@tag), class: 'float-end btn btn-secondary',
                method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="bi bi-trash"></i>
                <% end %>
  </div>

</div>

<div class="row w-75 mx-auto">
    <%= render @tag.articles %>
</div>