<%= button_to "New Article",
              new_article_path,
              method: :get,
              class: 'btn btn-primary me-5 mt-2',
              form_class: 'position-absolute ps-5 start-0' %>

<div class="row row-cols-1 row-cols-md-4 g-3 mt-1">
  <div class="col">
  <% @articles.each do |article| %>
  <%= link_to article do %>
    <div class="card">
      <div class="card-header">
        <%= article.title %>
      </div>
      <div class="card-body">
        <%= article.body %>
      </div>
    <% end %>    
    </div>
  <% end %>
  </div>
</div>
